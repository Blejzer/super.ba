<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


<ImageView
        android:id="@+id/articleImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_weight="2"
        app:srcCompat="@mipmap/ic_placeholder"
        tools:layout_editor_absoluteX="176dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/tvtitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:layout_centerHorizontal="true"
    android:layout_below="@+id/articleImageView"
        android:maxLines="3"
        android:text="Title of the article"
        android:textSize="15sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/tvSmallSourceLogo1"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_toStartOf="@+id/tvpubdate"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="35dp"
        android:background="@color/colorWhite" />

    <TextView
        android:id="@+id/tvpubdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:paddingBottom="5dp"
        android:text="Objavljen"
        android:textSize="8sp" />

    <ProgressBar
        android:id="@+id/pbar"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/image"
        android:layout_centerHorizontal="true" />
</RelativeLayout>